    </nav>


        <form action="/login" method="post" class="LogColor container-fluid" style="margin-bottom: 80px">
            <a class="font3" > L O G I N </a>
            <hr style="border: black solid 1px">
            <div class="form-group margin2" >
                <label class="font2">Username: </label>
                <input type="text" class="form-control" name="{{box1}}" id="{{box1}}" placeholder="Enter Username" required />

            </div>
            <div class="form-group margin2">
                <label class="font2">Password: </label>
                <input type="password" class="form-control" name="{{box2}}" id="{{box2}}" placeholder="Password" required/>
            </div>
            <button type="submit" class="btn btn-primary" style="margin: 22px">Submit</button>
        </form>

</body>
